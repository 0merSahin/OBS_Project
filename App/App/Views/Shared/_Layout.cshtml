@using System.Security.Claims
@using App.Managers
@inject HtmlAuthorityManager AuthorityManager


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/App.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(2)" class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Student-Index</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(2)" class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="EmployeeStudents">Employees-Student</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(2)" class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Create">Student-Create</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(2)" class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Update">Student-Update</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(1)" class="nav-link text-dark" asp-area="" asp-controller="Notes" asp-action="Index">Notes-Index</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(1)" class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="CourseRegistration">Student-CourseRegistration</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="JointLoginPage">Account-JointLoginPage</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(3)" class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Create">|Gizli|Account-Create</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(2)" class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Courses">Employee-Courses</a>
                        </li>
                        <li class="nav-item">
                            <a style="display:@AuthorityManager.GetDisplayVariable(3)" class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index">|Gizli|Employees</a>
                        </li>
                    </ul>
                </div>
                @if (User.Identity != null && User.Identity.IsAuthenticated)
                {
                    <p>@User.FindFirst(ClaimTypes.Name)?.Value</p>
                }
                else
                {
                    <p>Giriş yapmış bir kullanıcı yok.</p>
                }
            </div>
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit"> Çıkış Yap </button>
                </form>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

